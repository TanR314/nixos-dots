\tcbuselibrary{skins,theorems,listings,breakable}


\tcbset{
  enhanced jigsaw,
  arc=6pt,
  left=9pt,
  after skip=15pt,
  before skip=15pt,
}

\newcommand{\tcbthmstyle}[4]{
  \declaretheoremstyle[
    headfont=#3\bfseries\color{#2},
    headpunct={\\[3pt]},
    #4
  ]{#1}
}

\newcommand{\tcbtheorem}[6]{
  \theoremstyle{#6}
  \declaretheorem[style=#6,name=#2,#3]{#1}
  \declaretheorem[style=#6,name=#2,numbered=no,#3]{#1*}
  \tcolorboxenvironment{#1}{
    colback=#4!5,colframe=#5,
  }
  \tcolorboxenvironment{#1*}{
    colback=#4!5,colframe=#5
  }
}

\newcommand{\tcblefttheorem}[6]{
  \theoremstyle{#6}
  \declaretheorem[style=#6,name=#2,#3]{#1}
  \declaretheorem[style=#6,name=#2,numbered=no,#3]{#1*}
  \tcolorboxenvironment{#1}{
    colback=#4!5,
    frame hidden,
    boxrule=0pt,
    left=13pt,
    overlay={\path[fill=#5] 
      ([xshift=10pt]frame.north west) to[out=180, in=90] 
      ([xshift=4pt, yshift=-6pt]frame.north west) --
      ([xshift=4pt, yshift=6pt]frame.south west) to[out=-90, in=180]
      ([xshift=10pt]frame.south west) --
      ([xshift=6pt]frame.south west) to[out=180, in=-90]
      ([yshift=6pt]frame.south west) --
      ([yshift=-6pt]frame.north west) to[out=90, in=180]
      ([xshift=6pt]frame.north west) --
      ([xshift=10pt]frame.north west)
      ;}
  }
  \tcolorboxenvironment{#1*}{
    colback=#4!5,
    frame hidden,
    boxrule=0pt,
    left=13pt,
    overlay={\path[fill=#5] 
      ([xshift=10pt]frame.north west) to[out=180, in=90] 
      ([xshift=4pt, yshift=-6pt]frame.north west) --
      ([xshift=4pt, yshift=6pt]frame.south west) to[out=-90, in=180]
      ([xshift=10pt]frame.south west) --
      ([xshift=6pt]frame.south west) to[out=180, in=-90]
      ([yshift=6pt]frame.south west) --
      ([yshift=-6pt]frame.north west) to[out=90, in=180]
      ([xshift=6pt]frame.north west) --
      ([xshift=10pt]frame.north west)
      ;}
  }
}
